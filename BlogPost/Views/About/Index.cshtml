@model BlogPost.Models.About.AboutUsViewModel

@{
    bool DisplayInRight(int sequenceOrder)
    {
        return sequenceOrder % 2 != 0;
    }
}


<div class="about-page">
    <h1>This is About page</h1>
    <section class="row text-and-image">
        <h2 class="col-lg-12">@Model.Title</h2>

        <div class="col-md-6 col-xl-8 @(DisplayInRight(0) ? "col-md-push-6 col-xl-push-4" : "")">
            <div class="text-and-image-text @(DisplayInRight(0) ? "text-right" : "")">
                @Html.Raw(Model.Desc)
            </div>
        </div>
        <div class="col-md-6 col-xl-4 @(DisplayInRight(0) ? "col-md-pull-6 col-xl-pull-8" : "")">
            @*@if (!string.IsNullOrEmpty(aboutSection.ImagePath))
            {
                <img src="@aboutSection.ImagePath" alt="@aboutSection.Heading" title="@aboutSection.Heading" class="img-responsive" />
            }*@
        </div>
    </section>

    <vc:media-gallery />
</div>
